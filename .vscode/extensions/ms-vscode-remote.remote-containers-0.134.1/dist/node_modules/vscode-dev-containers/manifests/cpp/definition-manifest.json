{
	"variants": ["buster", "stretch"],
	"build": {
		"latest": true,
		"rootDistro": "debian",
		"parent": "debian",
		"tags": [
			"cpp:${VERSION}-${VARIANT}"
		],
		"variantTags": {
			"buster": [
				"cpp:${VERSION}-debian-10",
				"cpp:${VERSION}-debian10",
				"cpp:${VERSION}-debian"
			],
			"stretch": [
				"cpp:${VERSION}-debian9",
				"cpp:${VERSION}-debian-9"
			]
		}
	},
	"dependencies": {
		"image": "buildpack-deps:${VARIANT}-curl",
		"imageLink": "https://hub.docker.com/_/buildpack-deps",
		"debian": [
			"apt-utils", 
			"dialog", 
			"ca-certificates",
			"git",
			"iproute2",
			"procps",
			"curl",
			"openssh-client",
			"less",
			"nano",
			"gnupg",
			"jq",
			"wget",
			"unzip",
			"lsb-release",
			"apt-transport-https",
			"libc6",
			"libgcc1",
			"libgssapi-krb5-2",
			"libicu[0-9][0-9]",
			"libssl1.1",
			"libstdc++6",
			"zlib1g",
			"sudo",
			"zsh",
			"build-essential",
			"cmake",
			"cppcheck",
			"valgrind"
		],
		"manual": [
			{
				"Component": {
					"Type": "git",
					"git": {
						"Name": "Oh My Zsh!",
						"repositoryUrl": "https://github.com/robbyrussell/oh-my-zsh",
						"commitHash": "c130aadb6a66aa680a322c08d87ad773316f713d"
					}
				}
			}
		]
	}
}